<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <Spinner
        android:id="@+id/drill_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/drill_image_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Placeholder"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/drill_spinner"/>
    <TextView
        android:id="@+id/drill_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/drill_image_placeholder"/>
    <TextView
        android:id="@+id/drill_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tips"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/drill_description"/>
    <Button
        android:id="@+id/start_ar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start AR Drill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>